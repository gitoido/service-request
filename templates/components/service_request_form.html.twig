<div {{ attributes }}>

    {% if isSuccessful %}
        <div class="alert alert-success">Service request created!</div>
    {% else %}
        {{ form_start(form, {
            attr: {
                novalidate: true,
                'data-action': 'live#action:prevent',
                'data-live-action-param': 'saveServiceRequest',
            }
        }) }}
        {{ form_row(form.service) }}
        {{ form_row(form.email) }}
        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 required">Price</label>
            <div class="col-sm-10">
                <div class="form-text fs-5">
                    {{ (this.selectedService.price / 100)|format_currency("USD") }}
                </div>
            </div>
        </div>
        <button
                type="submit"
                {{ this.hasValidationErrors() ? 'disabled' : '' }}
                class="btn btn-primary {{ this.hasValidationErrors() ? 'disabled' : '' }}"
        >Submit
        </button>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    {% endif %}
</div>
